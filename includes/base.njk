---
topbarShowsNameplate: true
color: "#296636"
jsFiles: ["content/scripts/main.js"]
cssFiles: ["content/styles/main.css", "content/styles/topbar-footbar.css"]
---

{%- from "includes/component.njk" import component -%}

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" href="/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" sizes="any">
    <link rel="manifest" href="/site.webmanifest">

    {% for file in jsFiles %}
      {% set js %}{% include file %}{% endset %}
      <script data-source="{{file}}">
        {{ js | jsmin | safe }}
      </script>
    {% endfor %}

    {% for file in cssFiles %}
      {% set css %}{% include file %}{% endset %}
      <style data-source="{{file}}">
        {{css | cssmin | safe}}
      </style>
    {% endfor %}

    <style>--page-primary-color: {{color}};</style>

    {# https://web.dev/defer-non-critical-css/ #}
    <link rel="preload" href="https://rsms.me/inter/inter.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <link rel="preload" href="https://files.jameslittle.me/webfonts/jetbrains-mono/jetbrains-mono.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript>
      <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
      <link rel="stylesheet" href="https://files.jameslittle.me/webfonts/jetbrains-mono/jetbrains-mono.css"/>
    </noscript>

    <title>{{ "DEV • " if environment.development }} {{ title }} • jameslittle.me</title>

    <meta name="twitter:card" content="summary" />
    <meta property="og:title" content="{{title}} • jameslittle.me" />
    <meta property="og:description" content="{{blurb if blurb}}" />
    <meta
      property="og:image"
      content="https://jameslittle.me/apple-touch-icon.png"
    />

    <meta name="theme-color" content="{{color}}">

    <script src="//unpkg.com/alpinejs" defer></script>
  </head>
  <body>
    {% include "topbar.njk" %}
    
    <main>
      {{ content | safe }}
    </main>
    
    {% include "footbar.njk" %}

    <script src="https://files.stork-search.net/stork.js"></script>
    <script>
      stork.register(
        'jil', 
        '/stork-posts.st', 
        {
          showProgress: false, 
          onInputCleared: () => toggleSearchVisibility(false), 
          onResultsHidden: () => toggleSearchVisibility(false)
        }
      )
    </script>
    
    {% set matomo %}
      {% include "content/scripts/matomo.js" %}
    {% endset %}
    <script>
      {{ matomo | jsmin | safe }}
    </script>
  </body>
</html>
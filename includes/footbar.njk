    <script>
        function repaintButton() {
            switch (jlGlobals.theme) {
                case "light":
                    document
                        .getElementById("dark-text")
                        .style
                        .display = 'none'
                    document
                        .getElementById("light-text")
                        .style
                        .display = 'inline'
                    break;
                case "dark":
                    document
                        .getElementById("light-text")
                        .style
                        .display = 'none'
                    document
                        .getElementById("dark-text")
                        .style
                        .display = 'inline'
                    break;
            }
        }

        function switchTheme() {
            switch (jlGlobals.theme) {
                case "light":
                    localStorage.setItem('theme', 'dark');
                    break;
                case "dark":
                    localStorage.setItem('theme', 'light');
                    break;
            }

            recomputeComputedValue()
            repaintButton()
        }

        document
            .getElementById("dark-mode-switch")
            .addEventListener("click", switchTheme)

        repaintButton()
    </script>

